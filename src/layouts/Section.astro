---
import "@styles/global.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<section class="section">
  <h2>
    {title}
  </h2>
  <slot />
</section>

<style>
  .section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
  }
</style>
