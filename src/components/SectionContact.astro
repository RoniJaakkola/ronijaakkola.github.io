---
import Section from "@layouts/Section.astro";

import Input from "@components/Input.astro";
import TextArea from "@components/TextArea.astro";

import PlaceholderImg from "@assets/placeholder.webp";
---

<Section title="Contact">
  <div class="contact-wrapper">
    <div class="wrapper">
      <p class="lead-paragraph contact-lead">
        Iâ€™m always interested in hearing about new opportunities and projects.
        You can contact me via email or with the form below.
      </p>
      <a class="contact-email">hello@roni.fi</a>
    </div>
    <div class="wrapper">
      <h3>Contact form</h3>
      <form class="contact-form">
        <div class="name-and-email-wrapper">
          <Input id="name" label="Name" type="text" />
          <Input id="email" label="Email" type="email" />
        </div>
        <Input id="subject" label="Subject" type="text" />
        <TextArea id="message" label="Message" rows="6" />
      </form>
    </div>
  </div>
</Section>

<style>
  .contact-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
  }

  .contact-lead {
    font-size: var(--font-size-l);
  }

  .contact-email {
    font-size: var(--font-size-l);
    font-weight: 400;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
  }

  .name-and-email-wrapper {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-m);
    flex-wrap: wrap;

    @media (min-width: 640px) {
      flex-wrap: nowrap;
    }
  }
</style>
