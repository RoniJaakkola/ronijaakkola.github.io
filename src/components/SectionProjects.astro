---
import "@styles/global.css";

import { Image } from "astro:assets";

import Section from "@layouts/Section.astro";
import ProjectCard from "@components/ProjectCard.astro";

import PlaceholderImg from "@assets/placeholder.webp";
import PlaceholderImg2 from "@assets/placeholder.webp";
import PlaceholderImg3 from "@assets/placeholder.webp";
import Card from "./Card.astro";
---

<Section title="Work">
  <div class="projects">
    <ProjectCard
      img={PlaceholderImg}
      imgId="project-1-img"
      title="Helsinki Design System"
      link="/project-hds"
    >
      A design system for the largest organisation in Finland
    </ProjectCard>

    <ProjectCard
      img={PlaceholderImg2}
      imgId="project-2-img"
      title="Project 2"
      link="/project-2"
    >
      A design system for the largest organisation in Finland
    </ProjectCard>

    <ProjectCard
      img={PlaceholderImg3}
      imgId="project-3-img"
      title="Project 3"
      link="/project-3"
    >
      A design system for the largest organisation in Finland
    </ProjectCard>
  </div>
</Section>

<style>
  .projects {
    display: flex;
    gap: var(--spacing-l);
    flex-wrap: wrap;
    @media (min-width: 640px) {
      flex-wrap: nowrap;
    }
  }
  .project-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
  }

  .project-img {
    width: 100%;
    height: auto;
    border: var(--border-image);
  }
</style>
