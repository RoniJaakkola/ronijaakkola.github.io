---
import Section from "@layouts/Section.astro";
import ResumeItem from "@components/ResumeItem.astro";
---

<Section title="Resume">
  <div class="resume-grid-container">
    <div class="resume-grid-item">
      <h3>Work</h3>
    </div>
    <div class="resume-grid-item">
      <ResumeItem
        title="Reaktor Innovations"
        role="UX Designer"
        time="8/2022 — present"
      />
      <ResumeItem title="Gofore" role="UX Designer" time="12/2017 — 8/2022" />
      <ResumeItem
        title="Leadin (acquired by Gofore)"
        role="UX Developer"
        time="2/2017 — 12/2017"
      />
      <ResumeItem
        title="Atostek"
        role="Software Designer"
        time="1/2016 — 2/2017"
      />
      <ResumeItem
        title="Tampere University of Technology"
        role=" Research Assistant"
        time="1/2015 — 6/2015"
      />
    </div>
    <div class="resume-grid-item">
      <h3 class="">Awards</h3>
    </div>
    <div class="resume-grid-item">
      <ResumeItem
        title="Grand One - Best Design System"
        role="Helsinki Design System"
        time="2023"
      />
    </div>
    <div class="resume-grid-item">
      <h3 class="">Education</h3>
    </div>
    <div class="resume-grid-item">
      <ResumeItem
        title="Master of Science, User Experience"
        role="Tampere University of Technology"
        time="2017"
      />
      <ResumeItem title="Sertified Scrum Master" role="SAFe 4" time="2019" />
    </div>
    <div class="resume-grid-item">
      <h3 class="">Public talks</h3>
    </div>
    <div class="resume-grid-item">
      <ResumeItem
        title="Accessibility in service design"
        role="#saavuta21 conference"
        time="2021"
      />
    </div>
  </div>
</Section>

<style>
  .resume-wrapper {
    display: flex;
    box-sizing: border-box;
    max-width: 59.25rem;
    margin: auto;
    width: 100%;
    flex-direction: column;
    gap: 2rem;
    align-self: stretch;
  }

  .resume-grid-container {
    display: grid;
    grid-template-columns: 1fr auto;
    row-gap: 3rem;
    width: 100%;
  }

  .resume-grid-item {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
</style>
